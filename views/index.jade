extends layout

block content
  h1= title

  // WRAPPER
  #wrapper

    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        strong Gender:
        |  <span id='userInfoGender'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
        br 
        button#btnEditCurrentUser Edit User
    // /USER INFO

    // USER UPDATE
    #updateUser
      h2 Update User Info
      fieldset
        input#inputUpdateUserName(type='text', placeholder='Username')
        input#inputUpdateUserEmail(type='text', placeholder='Email')
        br
        input#inputUpdateUserFullname(type='text', placeholder='Full Name')
        input#inputUpdateUserAge(type='text', placeholder='Age')
        br
        input#inputUpdateUserLocation(type='text', placeholder='Location')
        select(id="inputUpdateUserGender", name="inputUpdateUserGender")
          option Male
          option Female
          option Rather not specify
        br
        input#inputUpdateUserId(type='hidden')
        button#btnUpdateUser Update User
    // /USER UPDATE

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Edit?
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser  
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        select(id="inputUserGender", name="inputUserGender")
          option(value='') Please select a gender
          option Male
          option Female
          option Rather not specify
        br
        button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER